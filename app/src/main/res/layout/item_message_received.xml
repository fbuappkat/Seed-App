<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="0dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvReceivedName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="John Doe"
        android:textColor="@color/kat_grey_2"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/ivProfileImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvReceivedBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_rectangle_grey"
        android:fontFamily="@font/montserrat_regular"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:text="hi man, how are you?"
        android:textColor="@color/kat_black"
        app:layout_constraintLeft_toRightOf="@+id/ivProfileImage"
        app:layout_constraintTop_toBottomOf="@+id/tvReceivedName" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="11:40"
        android:textColor="@color/kat_grey_2"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvReceivedBody"
        app:layout_constraintLeft_toRightOf="@+id/tvReceivedBody" />

</android.support.constraint.ConstraintLayout>