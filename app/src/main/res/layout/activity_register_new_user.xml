<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signinBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list"
    android:fitsSystemWindows="true">

    <EditText
        android:id="@+id/etName"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/et_bg"
        android:fontFamily="@font/proximanova_semibold"
        android:hint="Name"
        android:padding="16dp"
        android:textColor="@color/login_form_details"
        android:textColorHighlight="@color/login_form_details"
        android:textColorHint="@color/login_form_details"
        android:textCursorDrawable="@color/login_form_details"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/tvSeedCaption" />

    <ImageView
        android:id="@+id/ivInstagramLogo"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_marginTop="70dp"
        android:alpha="0.8"
        android:contentDescription="logo"
        android:src="@drawable/ic_seed_logo"
        android:tint="@color/kat_white"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSeedCaption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/proximanova_semibold"
        android:inputType="none"
        android:padding="8dp"
        android:text="Welcome to Seed. Enter your details below to get your account set up."
        android:textAlignment="center"
        android:textColor="@color/login_form_details"
        android:textColorHighlight="@color/login_form_details"
        android:textColorHint="@color/login_form_details"
        android:textCursorDrawable="@color/login_form_details"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/ivInstagramLogo" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/et_bg"
        android:fontFamily="@font/proximanova_semibold"
        android:hint="@string/username"
        android:inputType="none"
        android:padding="16dp"
        android:textColor="@color/login_form_details"
        android:textColorHighlight="@color/login_form_details"
        android:textColorHint="@color/login_form_details"
        android:textCursorDrawable="@color/login_form_details"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/etName" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_bg"
        android:fontFamily="@font/proximanova_semibold"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="@color/login_form_details_medium"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_left" />

</android.support.constraint.ConstraintLayout>